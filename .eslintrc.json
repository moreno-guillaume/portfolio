{
  "env": {
    "browser": true,
    "es2022": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    // Erreurs critiques (bloquantes)
    "no-undef": "error",
    "no-unused-vars": ["error", { 
      "args": "none", 
      "varsIgnorePattern": "^_",
      "argsIgnorePattern": "^_"
    }],
    "no-unreachable": "error",
    "no-console": "off",
    "no-debugger": "warn",
    
    // Style (warnings - Prettier s'en occupe)
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "indent": "off",
    "comma-dangle": "off",
    "eol-last": "off",
    "no-trailing-spaces": "off",
    
    // Bonnes pratiques
    "eqeqeq": ["warn", "always"],
    "no-var": "warn",
    "prefer-const": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    
    // Compatibilité moderne
    "no-global-assign": "error",
    "no-implicit-globals": "error"
  },
  "globals": {
    // Variables globales autorisées dans votre projet
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "performance": "readonly",
    "requestAnimationFrame": "readonly",
    "cancelAnimationFrame": "readonly",
    "Date": "readonly",
    "Math": "readonly",
    "Set": "readonly",
    "Map": "readonly",
    
    // Variables spécifiques à votre projet
    "App": "writable",
    "DebugUtils": "writable"
  },
  "ignorePatterns": [
    "node_modules/",
    "vendor/",
    "var/",
    "public/build/",
    "*.min.js"
  ]
}