{
  "name": "portfolio",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "copy-icons": "if not exist \"public\\fonts\\bootstrap-icons\" mkdir \"public\\fonts\\bootstrap-icons\" && xcopy \"node_modules\\bootstrap-icons\\font\\fonts\\*\" \"public\\fonts\\bootstrap-icons\\\" /Y /Q",
    "dev": "npm run copy-icons && vite",
    "build": "npm run copy-icons && vite build",
    "clean": "php scripts/clean-code.php --apply",
    "clean:test": "php scripts/clean-code.php --test",
    "format": "prettier --write 'assets/js/**/*.js'",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "validate": "npm run clean:test && npm run format && npm run lint",
    "production": "npm run clean && npm run format && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moreno-guillaume/portfolio.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/moreno-guillaume/portfolio/issues"
  },
  "homepage": "https://github.com/moreno-guillaume/portfolio#readme",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "sass": "^1.90.0",
    "vite": "^7.1.2",
    "prettier": "^3.1.0",
    "eslint": "^8.57.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.13.1"
  }
}